<idea-plugin>
  <id>com.github.zigzen.zig</id>
  <name>Zig Language</name>

  <extensions defaultExtensionNs="com.intellij">
    <fileType language="ZIG"
      extensions="zig"
      fieldName="INSTANCE"
      implementationClass="com.github.zigzen.openapi.ZigFileType"
      name="Zig File"/>
    <lang.parserDefinition language="ZIG"
      implementationClass="com.github.zigzen.lang.ZigParserDefinition"/>
    <lang.syntaxHighlighterFactory language="ZIG"
      implementationClass="com.github.zigzen.openapi.ZigSyntaxHighlighterFactory"/>
    <annotator language="ZIG"
      implementationClass="com.github.zigzen.lang.ZigAnnotator"/>
  </extensions>

  <extensions defaultExtensionNs="com.github.zigzen.zig">
    <toolchainFlavour implementation="com.github.zigzen.lang.toolchain.flavour.ZigSystemPathEnvironmentVariableToolchainFlavour"/>
    <toolchainProvider implementation="com.github.zigzen.lang.toolchain.ZigLocalToolchainProvider"/>
  </extensions>

  <extensionPoints>
    <extensionPoint qualifiedName="com.github.zigzen.zig.toolchainFlavour"
                    interface="com.github.zigzen.lang.toolchain.flavour.AbstractZigToolchainFlavour"/>
    <extensionPoint qualifiedName="com.github.zigzen.zig.toolchainProvider"
                    interface="com.github.zigzen.lang.toolchain.ZigToolchainProvider"/>
  </extensionPoints>
</idea-plugin>
